#!/usr/bin/env python3
"""
SmartFileCmd - Natural Language File Manager CLI
Wrapper script for easy command-line usage.
"""

import sys
import os
from pathlib import Path

# Add the python_frontend directory to the path
script_dir = Path(__file__).parent
python_frontend_dir = script_dir / "python_frontend"
sys.path.insert(0, str(python_frontend_dir))

# Import and run the main CLI
from cli import app

if __name__ == "__main__":
    app() 